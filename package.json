{
  "name": "bb-companion-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push --filter=database",
    "db:migrate": "turbo db:migrate --filter=database",
    "db:studio": "turbo db:studio --filter=database",
    "dev:backend": "turbo dev --filter=backend",
    "dev:frontend": "turbo dev --filter=mobile",
    "build:backend": "turbo build --filter=backend",
    "build:frontend": "turbo build --filter=mobile",
    "docker:up": "docker compose -f ./apps/backend/docker/docker-compose.yml up -d",
    "docker:dev": "docker compose up -d && turbo dev",
    "docker:backend": "docker compose up -d database && turbo dev --filter=backend"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "turbo": "^2.5.5"
  },
  "packageManager": "pnpm@10.13.1"
}
